<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoolViewSample.Views.BriefView">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="labelStyle" TargetType="Label">
                <Setter Property="TextColor" Value="White" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentView.Content>
        <StackLayout BackgroundColor="#4DFFFFFF">
            <Label Text="Brief" Style="{StaticResource labelStyle}"/>
            <Label Text="0600" Style="{StaticResource labelStyle}"/>
            <Label Text="0900" Style="{StaticResource labelStyle}"/>
            <Label Text="1200" Style="{StaticResource labelStyle}"/>
            <Label Text="1500" Style="{StaticResource labelStyle}"/>
            <Label Text="1800" Style="{StaticResource labelStyle}"/>
        </StackLayout>
    </ContentView.Content>
</ContentView>